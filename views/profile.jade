extends layout

block content
  .page-header.text-center
    h1
      span.fa.fa-anchor
      |  Profile Page
    a.btn.btn-default.btn-sm(href='/logout') 
      i.fa.fa-sign-out 
      |  Logout
  .row
    // LOCAL INFORMATION
    .col-sm-6
      .well
        h3
          span.fa.fa-user
          |  Local
        if (user.local.email)
          p
            strong id : 
            = user._id 
            br 
            strong email : 
            = user.local.email
            br
            strong password : 
            = user.local.password
            br
          a.btn.btn-default(href='/unlink/local') 
            i.fa.fa-chain-broken 
            |  Unlink
        else
          a.btn.btn-default(href='/connect/local')   
            i.fa.fa-link
            |  Connect Local
    // FACEBOOK INFORMATION
    .col-sm-6
      .well
        h3.text-primary
          span.fa.fa-facebook
          |  Facebook
        if (user.facebook.token)
          p
            strong id : 
            = user.facebook.id
            br 
            strong token : 
            = user.facebook.token
            br
            strong email : 
            = user.facebook.email
            br
            strong name : 
            = user.facebook.name
            br
          a.btn.btn-primary(href='/unlink/facebook')  
            i.fa.fa-chain-broken 
            |  Unlink
        else
          a.btn.btn-primary(href='/connect/facebook')   
            i.fa.fa-link
            |  Connect Facebook
  .row
    // TWITTER INFORMATION
    .col-sm-6
      .well
        h3.text-info
          span.fa.fa-twitter
          |  Twitter
        if (user.twitter.token)
          p
            strong id : 
            = user.twitter.id 
            br 
            strong token : 
            = user.twitter.token
            br
            strong username : 
            = user.twitter.username
            br
            strong displayName : 
            = user.twitter.displayName
            br
          a.btn.btn-info(href='/unlink/twitter')  
            i.fa.fa-chain-broken 
            |  Unlink
        else 
          a.btn.btn-info(href='/connect/twitter')   
            i.fa.fa-link
            |  Connect Twitter
    // GOOGLE+ INFORMATION
    .col-sm-6
      .well
        h3.text-danger
          span.fa.fa-google-plus
          |  Google
        if (user.google.token)
          p
            strong id : 
            = user.google.id
            br 
            strong token : 
            = user.google.token
            br
            strong email : 
            = user.google.email
            br
            strong name : 
            = user.google.name
            br
          a.btn.btn-danger(href='/unlink/google')  
            i.fa.fa-chain-broken 
            |  Unlink
        else
          a.btn.btn-danger(href='/connect/google')  
            i.fa.fa-link
            |  Connect Google
